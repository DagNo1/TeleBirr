<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterConfirmation">

    <TextView
        android:id="@+id/textView_in_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="Enter your phone number"
        android:textColor="@color/on_boarding_dark_gray"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <TextView
        android:id="@+id/textView2_in_con"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="25sp"
        android:text="@string/placeHolder_small"
        android:textAlignment="center"
        android:textColor="@color/on_boarding_indicator_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_in_con" />

    <LinearLayout
        android:id="@+id/linearLayout2_in_con"
        android:layout_width="340sp"
        android:layout_height="55sp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_in_con"
        android:weightSum="6">
        <EditText
            android:id="@+id/confirmation_code_1"
            android:layout_width="0sp"
            android:layout_height="35dp"
            android:layout_margin="9sp"
            android:background="@drawable/input_field"
            android:elevation="4sp"
            android:textAlignment="center"
            android:hint="x"
            android:inputType="number"
            android:maxLength="1"
            android:padding="3sp"
            android:cursorVisible="false"
            android:textSize="25sp"
            android:layout_weight="1"/>
        <EditText
            android:maxLength="1"
            android:id="@+id/confirmation_code_2"
            android:layout_width="0sp"
            android:layout_height="35dp"
            android:layout_margin="9sp"
            android:background="@drawable/input_field"
            android:elevation="4sp"
            android:textAlignment="center"
            android:hint="x"
            android:inputType="number"
            android:cursorVisible="false"
            android:padding="3sp"
            android:textSize="25sp"
            android:layout_weight="1"/>
        <EditText
            android:maxLength="1"
            android:id="@+id/confirmation_code_3"
            android:layout_width="0sp"
            android:layout_height="35dp"
            android:layout_margin="9sp"
            android:background="@drawable/input_field"
            android:elevation="4sp"
            android:textAlignment="center"
            android:hint="x"
            android:inputType="number"
            android:padding="3sp"
            android:cursorVisible="false"
            android:textSize="25sp"
            android:layout_weight="1"/>
        <EditText
            android:maxLength="1"
            android:id="@+id/confirmation_code_4"
            android:layout_width="0sp"
            android:layout_height="35dp"
            android:layout_margin="9sp"
            android:background="@drawable/input_field"
            android:elevation="4sp"
            android:textAlignment="center"
            android:hint="x"
            android:inputType="number"
            android:padding="3sp"
            android:cursorVisible="false"
            android:textSize="25sp"
            android:layout_weight="1"/>
        <EditText
            android:maxLength="1"
            android:id="@+id/confirmation_code_5"
            android:layout_width="0sp"
            android:layout_height="35dp"
            android:layout_margin="9sp"
            android:background="@drawable/input_field"
            android:elevation="4sp"
            android:textAlignment="center"
            android:hint="x"
            android:inputType="number"
            android:padding="3sp"
            android:textSize="25sp"
            android:cursorVisible="false"
            android:layout_weight="1"/>
        <EditText
            android:cursorVisible="false"
            android:id="@+id/confirmation_code_6"
            android:layout_width="0sp"
            android:layout_height="35dp"
            android:layout_margin="9sp"
            android:background="@drawable/input_field"
            android:elevation="4sp"
            android:textAlignment="center"
            android:hint="x"
            android:inputType="number"
            android:maxLength="1"
            android:padding="3sp"
            android:textSize="25sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/su_c_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_blue_btn"
        android:fontFamily="@font/inter_medium"
        android:paddingHorizontal="40sp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2_in_con" />
</androidx.constraintlayout.widget.ConstraintLayout>