<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white2"
    tools:context=".RegisterFingerPrint">

    <TextView
        android:id="@+id/textView0_in_fp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/choose_login_method"
        android:textColor="@color/on_boarding_dark_gray"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <LinearLayout
        android:id="@+id/linearLayout_in_fp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView0_in_fp"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView_in_fp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finger_print" />

        <TextView
            android:id="@+id/textView_in_fp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:padding="0sp"
            android:text="@string/fingerprint"
            android:textColor="@color/on_boarding_indicator_gray"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1_in_fp"
        android:layout_width="165dp"
        android:layout_height="232dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView0_in_fp"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView1_in_fp"
            android:layout_width="130dp"
            android:layout_height="152dp"

            android:src="@drawable/baseline_password_24" />

        <TextView
            android:id="@+id/textView1_in_fp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:padding="0sp"
            android:text="@string/password"
            android:textColor="@color/on_boarding_indicator_gray"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:id="@+id/su_fp_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_blue_btn"
        android:enabled="false"
        android:fontFamily="@font/inter_medium"
        android:paddingHorizontal="40sp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1_in_fp"
        app:layout_constraintVertical_bias="0.135" />
</androidx.constraintlayout.widget.ConstraintLayout>
